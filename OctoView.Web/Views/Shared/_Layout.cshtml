<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TestApplication</title>
	<base href="~/" />

	<link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Debtor Web Link</a>
			</div>
			<div class="navbar-collapse collapse">
				@await Html.PartialAsync("_LoginPartial")
			</div>
		</div>
	</nav>
	<div class="container body-content test-stuff">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; 2018 - TestApplicationMvc</p>
		</footer>
	</div>

	<script src="~/dist/signalr.js" asp-append-version="true"></script>
	<script src="~/dist/vendor.js" asp-append-version="true"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
